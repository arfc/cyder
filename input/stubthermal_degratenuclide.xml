<?xml version="1.0"?>
<!-- 1 SourceFacility Source, 1 GenericRepository Sink -->

<simulation>
  <control>
    <duration>10</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <simstart>0</simstart>
    <decay>2</decay>
  </control>

  <commodity>
    <name>commodity</name>
  </commodity>

  <market>
    <name>commodity_market</name>
    <mktcommodity>commodity</mktcommodity>
    <model>
      <NullMarket/>
    </model>
  </market>

  <facility>
    <name>Source</name>
    <lifetime>5</lifetime>
    <model>
      <SourceFacility>
        <output>
          <outcommodity>waste</outcommodity>
          <output_capacity>1</output_capacity>
          <recipe>commod_recipe</recipe>
        </output>
      </SourceFacility>
    </model>
    <outcommodity>waste</outcommodity>
  </facility>
  
  <facility>
    <name>Repository</name>
    <model>
      <GenericRepository>
        <x>0</x>
        <y>0</y>
        <z>0</z>
        <dx>100</dx>
        <dy>100</dy>
        <dz>100</dz>
        <advective_velocity>0.000631</advective_velocity>
        <capacity>1</capacity>
        <incommodity>waste</incommodity>
        <inventorysize>20</inventorysize>
        <lifetime>1000</lifetime>
        <startOperMonth>1</startOperMonth>
        <startOperYear>2000</startOperYear>
        <component>
          <name>FF</name>
          <innerradius>0</innerradius>
          <outerradius>100</outerradius>
          <componenttype>FF</componenttype>
          <thermalmodel>
            <StubThermal/>
          </thermalmodel>
          <nuclidemodel>
            <DegRateNuclide>
              <degradation>0.1</degradation>
            </DegRateNuclide>
          </nuclidemodel>
        </component>
      </GenericRepository>
    </model>
    <incommodity>waste</incommodity>
  </facility>

  <region>
    <name>SingleRegion</name>
    <allowedfacility>Source</allowedfacility>
    <allowedfacility>Repository</allowedfacility>
    <model>
      <NullRegion/>
    </model>
    <institution>
      <name>SingleInstitution</name>
      <availableprototype>Source</availableprototype>
      <availableprototype>Repository</availableprototype>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>3</number>
        </entry>
        <entry>
          <prototype>Repository</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <model>
        <NullInst/>
      </model>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <isotope>
      <id>92235</id>
      <comp>0.05</comp>
    </isotope>
    <isotope>
      <id>92238</id>
      <comp>0.95</comp>
    </isotope>
    <isotope>
      <id>08016</id>
      <comp>0.13</comp>
    </isotope>
  </recipe>

</simulation>
